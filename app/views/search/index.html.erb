<% content_for :head do %>
  <%= stylesheet_link_tag 'searchresults.css' %>
<% end %>

<div id="area_contentbg">
		<div class="area_fullwidth">
			<div class="header"><img src="assets/images/header_searchresults.png" width="872" height="44" alt="Upcoming Events: A fresh list of the upcoming events on Flashmobstream." /></div>
       			<div class="middle">

                 <% @results.each do |event| %>

                      <table width="97%" border="0" align="center" cellpadding="0" cellspacing="0">
					<tr>
						<td width="6%" rowspan="2"><%= image_tag event.logo.url(:thumb), :class => "eventimage" %></td>
						<td width="94%" class="commenttitle"><%=h event.name %></td>
					</tr>
					<tr>
						<td valign="top" class="commenttext"><%=h truncate(event.description, :omission => "...") %></td>
					</tr>
                    <tr>
					<td colspan="2" class="btn_moreinfo"><a href="<%= event_path(event) %>"><%= image_tag("btn_moreinfo.png", :size => "83x27")%></a></td>
				    </tr>    
				</table>
                <br>
             <% end %>


               </div>
	      </div>
    </div>