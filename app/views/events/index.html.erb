<% content_for :head do %>
  <%= stylesheet_link_tag 'eventlisting.css' %>
<% end %>

<div id="area_globalcontainer">
	<div id="area_logo">
	  <%= image_tag("fms_logo.png", :size => "260x60", :alt => "Come and share events everywhere.")%>
	</div>
	<div id="area_login">
	  <% if current_user %>
      <strong>You're connected as <%=h current_user.name%>&nbsp;&nbsp;&nbsp;</strong><strong>[ </strong><%= link_to 'Logout', logout_path %> <strong>]</strong>
	  <% else %>
  		<% form_for @user_session, :url => user_session_path do |f| %>
  		  <select id="sel_openid" name="user_session[openid_identifier]">
    			<option value="https://www.google.com/accounts/o8/id">Google</option>
          <option value="http://yahoo.com/">Yahoo</option>
          <option value="http://myopenid.com/">My OpenID</option>
  		  </select>
    		<%= f.submit 'Send' %>
      <% end %>
    <% end %>
	</div>
	<div id="area_label"></div>
	<div id="area_newevent"><a href="<%= new_event_path %>"><%= image_tag("btn_newevent.png", :size => "230x40", :alt => "Join the community and create your own events!")%></a></div>
	<div id="area_gmaps">
		<div id="gmaps_features"></div>
	</div>

	<div id="area_contentshadow"></div>
	<div id="area_contentbg">
		
		<%= render :partial => "events", :locals => { :past_events => @past_events, :next_events => @next_events, :close_events => @close_events } %>
		
