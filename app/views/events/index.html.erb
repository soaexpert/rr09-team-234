<div id="area_globalcontainer">
	<div id="area_logo">
		<img src="assets/images/fms_logo.png" width="260" height="60" alt="Come and share events everywhere." />

	</div>
	<div id="area_login">
		<% form_for @user_session, :url => user_session_path do |f| %>
		  <select id="sel_openid" name="user_session[openid_identifier]">
  			<option value="https://www.google.com/accounts/o8/id">Google</option>
        <option value="http://yahoo.com/">Yahoo</option>
        <option value="http://myopenid.com/">My OpenID</option>
		  </select>
  		<%= f.submit 'Send' %>
    <% end %>
	</div>
	<div id="area_label"></div>
	<div id="area_newevent"><a href="<%= new_event_path %>"><img src="assets/images/btn_newevent.png" width="230" height="40" alt="Join the community and create your own events!" /></a></div>
	<div id="area_gmaps">
		<div id="gmaps_features"></div>
	</div>

	<div id="area_contentshadow"></div>
	<div id="area_contentbg">
		<div id="area_upcomingevents">
			<div id="header_upcomingevents">
				<img src="assets/images/header_upcomingevents.png" width="202" height="30" alt="Upcoming Events: A fresh list of the upcoming events on Flashmobstream." />
			</div>
			<div class="eventlist_top"></div>
			<div class="eventlist_mid">
        <% @next_events.each do |event| %>
  				<table width="100%" border="0" cellpadding="0" cellspacing="0">
  					<tr>
  						<td width="28%" rowspan="2"><%= image_tag event.logo.url(:thumb), :class => "eventimage" %></td>
  						<td width="72%" class="eventtitle"><%=h event.name %></td>
  					</tr>
  					<tr>
  						<td><%=h truncate(event.description, :omission => "...") %></td>
  					</tr>
  					<tr>
  						<td colspan="2" class="btn_moreinfo"><img src="assets/images/btn_moreinfo.png" width="83" height="27" /></td>
  					</tr>
  				</table>
  				<br />
				<% end %>
			</div>
			<div class="eventlist_bottom"></div>
		</div>
		<div id="area_closeevents">
			<div id="header_closeevents">
				<img src="assets/images/header_closeevents.png" width="202" height="30" alt="Close Events: See the events that are about to happen close to you!" />

			</div>
			<div class="eventlist_top"></div>
			<div class="eventlist_mid">
				<% @close_events.each do |event| %>
  				<table width="100%" border="0" cellpadding="0" cellspacing="0">
  					<tr>
  						<td width="28%" rowspan="2"><%= image_tag event.logo.url(:thumb), :class => "eventimage" %></td>
  						<td width="72%" class="eventtitle"><%=h event.name %></td>
  					</tr>
  					<tr>
  						<td><%=h truncate(event.description, :omission => "...") %></td>
  					</tr>
  					<tr>
  						<td colspan="2" class="btn_moreinfo"><img src="assets/images/btn_moreinfo.png" width="83" height="27" /></td>
  					</tr>
  				</table>
  				<br />
				<% end %>
			</div>
			<div class="eventlist_bottom"></div>
		</div>
		<div id="area_pastevents">
			<div id="header_pastevents">
				<img src="assets/images/header_pastevents.png" width="202" height="30" alt="Past Events: See the comments, videos and ratings of the most recent events of our community!" />
			</div>

			<div class="eventlist_top"></div>
			<div class="eventlist_mid">
				<% @past_events.each do |event| %>
  				<table width="100%" border="0" cellpadding="0" cellspacing="0">
  					<tr>
  						<td width="28%" rowspan="2"><%= image_tag event.logo.url(:thumb), :class => "eventimage" %></td>
  						<td width="72%" class="eventtitle"><%=h event.name %></td>
  					</tr>
  					<tr>
  						<td><%=h truncate(event.description, :omission => "...") %></td>
  					</tr>
  					<tr>
  						<td colspan="2" class="btn_moreinfo"><img src="assets/images/btn_moreinfo.png" width="83" height="27" /></td>
  					</tr>
  				</table>
  				<br />
				<% end %>
			</div>
			<div class="eventlist_bottom"></div>
		</div>
