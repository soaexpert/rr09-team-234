<% content_for :head do %>
  <%= stylesheet_link_tag 'createevent.css' %>
<% end %>

<%= error_messages_for :event %>

<div id="area_globalcontainer">
	<div id="area_logo"><%= image_tag("fms_logo.png", :size => "345x60", :alt => "Come and share events everywhere.")%></div>
	<%= render :partial => "layouts/login" %>
	<div id="area_map">             </div>
	<div id="createevent_searchform">
		<div id="createevent_searchformlabel"></div>
		<ul id="frm_createevent">
		  <% form_for @event, :html => { :multipart => true } do |f| %>
  			<li>Label <span class="frm_tooltip">(How the system will search for it)</span></li>
  			<li><%= f.text_field :label, :class => "frm_createevent_txt" %></li>
  			<li>Address</li>
  			<li><%= f.text_field :address, :class => "frm_createevent_txt" %></li>
  			<li>Date</li>
  			<li><%= datetime_select :event, :date %></li>
  			<li>Name</li>
  			<li><%= f.text_field :name, :class => "frm_createevent_txt" %></li>
  			<li>Event Image
  			  <%= f.file_field :logo, :class => "frm_createevent_fil" %>
  			</li>
  			<li></li>
  			<li>Description</li>
  			<li><%= f.text_area :description, :class => "frm_createevent_txt", :cols => 40, :rows => 5 %></li>
  			<li class="btn_createevent">
  			  <%= image_submit_tag "btn_createevent.png", :size => "102x26", :alt => "Click if you've filled all fields." %>
  			</li>
			<% end %>
		</ul>
	</div>
	<div id="area_contentshadow"></div>
	<div id="area_contentbg">
		<%= render :partial => "layouts/events", :locals => { :past_events => @past_events, :next_events => @next_events, :close_events => @close_events } %>
		
