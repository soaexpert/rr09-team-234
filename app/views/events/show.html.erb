Logo <%= image_tag @event.logo.url(:medium) %>
Name <%=h @event.name %>
Description <%=h @event.description %>
Date <%= @event.date %>

Owner: <%= @event.owner.name %>

Participants:
<% @event.users.each do |user| %>
  <%= image_tag user.avatar.url(:small) %>
  <%=h user.name %>
<% end %>

<% if current_user != @event.owner && !@event.users.include(current_user) %>
  <%= link_to 'I want to join', join_path(@event) %>
<% end %>

<% if !current_user.nil? && current_user != @event.owner && @event.users.include(current_user) %>
  <%= link_to 'I want to unjoin', unjoin_path(@event) %>
<% end %>

<% if !current_user.nil?%>
  <% form_for @comment do |f| %>
    <%= f.hidden_field :event_id, @event %>
    <%= f.hidden_field :user_id, current_user %>
    
    <%= f.label :content %>
    <%= f.text_field :content%>
  <% end %>
<% end %>

<% @event.approved_comments.each do |comment| %>
  <%= image_tag comment.user.avatar.url(:small) %>
  <%=h comment.user.name %>
  <%=h comment.content %>
<% end %>

<% if current_user == @event.owner %>
  <% @event.unapproved_comments.each do |comment| %>
    <%= image_tag comment.user.avatar.url(:small) %>
    <%=h comment.user.name %>
    <%=h comment.content %>
    <%= link_to "Approve", approve_comment_path(comment) %>
    <%= link_to "Delete", delete_comment_path(comment) %>
  <% end %>
<% end %>